{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "exclude": [
    "node_modules"
  ]
}
